<view class="van-hairline--surround">
  <view >
    <van-cell-group>
      <van-field
        value="{{ message }}"
        label="问题描述"
        type="textarea"
        placeholder="请输入问题描述"
        autosize
        border="{{ false }}"
        clearable
        required
      />
    </van-cell-group>
  </view>

  <view>
    <van-collapse value="{{ activeNames }}" bind:change="onCollapseChange" >
      <van-collapse-item title="责任班组选择" name="1" icon="manager-o">
        <van-radio-group value="{{ radio }}" class="radioGroup">

          <van-cell-group>

            <van-cell title="制动" clickable data-value="1" bind:click="onRadioClick">
              <van-radio name="1" />
            </van-cell>
            <van-cell title="车体预修" clickable data-value="2" bind:click="onRadioClick">
              <van-radio name="2" />
            </van-cell>
            <van-cell title="轮轴" clickable data-value="3" bind:click="onRadioClick">
              <van-radio name="3" />
            </van-cell>
            <van-cell title="转向架" clickable data-value="4" bind:click="onRadioClick">
              <van-radio name="4" />
            </van-cell>
            <van-cell title="钩缓" clickable data-value="5" bind:click="onRadioClick">
              <van-radio name="5" />
            </van-cell>
            <van-cell title="探伤" clickable data-value="6" bind:click="onRadioClick">
              <van-radio name="6" />
            </van-cell>
            <van-cell title="配送" clickable data-value="7" bind:click="onRadioClick">
              <van-radio name="7" />
            </van-cell>
            <van-cell title="罐检" clickable data-value="8" bind:click="onRadioClick">
              <van-radio name="8" />
            </van-cell>
            <van-cell title="架落车" clickable data-value="9" bind:click="onRadioClick">
              <van-radio name="9" />
            </van-cell>

          </van-cell-group>
        </van-radio-group>
      </van-collapse-item>





      
    </van-collapse>
  </view>

  <view >
    <van-cell-group>
      <van-field
        value="{{ message }}"
        label="责任人"
        type="textarea"
        placeholder="请输入责任人"
        border="{{ false }}"
        clearable
        required />
    </van-cell-group>
  </view>

  <view >
    <van-cell-group border>

      <van-radio checked name="1">自查问题</van-radio>
      <van-field
        value="{{ message }}"
        label="其他"
        type="textarea"
        placeholder="输入其他类型"
        border="{{ false }}"
        clearable
         />
    </van-cell-group>
  </view>








</view>